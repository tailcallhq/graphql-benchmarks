{
  "name": "tc-benchmarks Codespace",
  "features": {
    "docker-from-docker": {
      "version": "latest",
      "moby": true
    }
  },
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "runArgs": ["-v", "/var/run/docker.sock:/var/run/docker.sock", "--network=host"],
  "forwardPorts": [8000, 3000],
  "postCreateCommand": "sleep 1"
}
